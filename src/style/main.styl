*
    margin 0
    padding 0
    font-family 'Merriweather', serif

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden

h2
    font-size 50px

p
    font-size 16px
    line-height 26px

.popup
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index: 2
    opacity 0
    pointer-events none

    .title
        position absolute
        top 5%
        left 5%

    .text
        position absolute
        bottom 5%
        left 5%
        width 50%

    .pictures
        position absolute
        left 70%
        top 0
        height 100%
        display flex
        flex-direction column
        justify-content space-around

.focused
    opacity 1