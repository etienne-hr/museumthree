*
    margin 0
    padding 0

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden

// Responsive
.responsive
    display none
@media screen and (orientation:portrait)
    .responsive
        display block
        position absolute
        display flex
        justify-content center
        align-items center
        background-color #000
        height 100%
        width 100%
        z-index 1000

// Library kit UI
*
    font-family 'Merriweather', serif
    color #CF9F52

h1
    font-size 5em

h2
    font-size 3em

p
    font-size 1em
    line-height 1.6em
 
.button
    position absolute
    padding 10px
    text-transform uppercase
    background-color transparent
    cursor pointer
    z-index 0


.button-palais
    top 2%
    left 2%
    border none

.button-orsay
    bottom 2%
    right 2%
    border 1px solid #CF9F52
    box-sizing border-box

.button-louvre
    bottom 2%
    right 2%
    border 1px solid #CF9F52
    box-sizing border-box

.button-pompidou
    bottom 2%
    right 2%
    border 1px solid #CF9F52
    box-sizing border-box

.is-unactiv
    visibility hidden

.is-back
    top 2%
    left 2%
    border none
    

// Pop ups positions and animations

.popup
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 2
    opacity 0
    pointer-events none
    will-change opacity
    transition opacity 1s ease-in 0

    .title
        position absolute
        top 10%
        left 5%

    .text
        position absolute
        bottom 5%
        left 5%
        width 50%

    .pictures
        position absolute
        left 65%
        top 0
        height 100%
        display flex
        flex-direction column
        justify-content space-around

@media (max-width: 1635px)
    .popup
        .pictures
            position absolute
            left 65%
            top 0
            height 80%
            padding 50px
            display flex
            flex-direction column
            justify-content space-around

@media (max-height: 700px)
    .popup
        .pictures
            display none


.focused
    opacity 1

