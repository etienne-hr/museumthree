*
    margin 0
    padding 0

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden

// Library kit UI
*
    font-family 'Merriweather', serif

h1
    font-size 5em

h2
    font-size 3em

p
    font-size 1em
    line-height 1.6em
 
.button
    padding 10px
    text-transform uppercase
    font-family Montserrat
    display inline-block
    background-color transparent
    box-shadow O

.button1 svg
    margin-left 20px
    display inline

.button1
    border 2px solid #262626
    box-sizing border-box

.button2 
    border none

.button2 svg
    margin-right 20px
    display inline


// welcome message
.welcome
    position absolute
    top 0
    left 0
    width 100%
    height 60%
    z-index: 2
    will-change: transform
    transition transform 1s ease-in 0

.welcome-title
    position absolute
    top 12%
    left 5%

.welcome-text
    position absolute
    top 50%
    left 5%
    width 60%
    font-size 1.5em
    line-height 2em

    p
        margin-bottom 5%

.welcome-done
    transform: translateY(-100%)


// Pop ups positions and animations

.popup
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index: 2
    opacity 0
    pointer-events none
    will-change opacity
    transition opacity 1s ease-in 0

    .title
        position absolute
        top 5%
        left 5%

    .text
        position absolute
        bottom 5%
        left 5%
        width 50%

    .pictures
        position absolute
        left 65%
        top 0
        height 100%

        img
            position absolute

        :first-child
            top 5%

        :nth-child(2n)
            top 35%
            left 5%

        :last-child
            top 65%


.focused
    opacity 1

